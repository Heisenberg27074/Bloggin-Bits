<%- include("partials/header") %>

    <div class="ui main text container segment">
        <div class="ui huge header center">
            New Blog
        </div>
        <form class="ui form" action="/blogs" method="post">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="Title" required>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" placeholder="image" required>
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]" placeholder = "Start writing..." required></textarea>
            </div>
            <input class="ui green big inverted button" type="submit">
        </form>
    </div>

<%- include("partials/footer") %>
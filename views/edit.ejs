<%- include("partials/header") %>

    <div class="ui main text container segment">
        <div class="ui huge header center">
            Edit <%= blog.title %>
        </div>
        <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title %>" required>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>" required>
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]" placeholder="Start eriting..." required><%= blog.body %></textarea>
            </div>
            <input class="ui green big inverted button" type="submit">
        </form>
    </div>

    <%- include("partials/footer") %>